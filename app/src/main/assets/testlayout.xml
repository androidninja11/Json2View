<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    layout_width="match_parent"
    layout_height="wrap_content">

    <LinearLayout
        orientation="vertical"
        layout_marginTop="50dp"
        background="@color/black"
        layout_width="match_parent"
        layout_height="wrap_content">
        <TextView
            id="@+id/textViewName"
            layout_width="match_parent"
            layout_height="50dp"
            layout_gravity="center"
            gravity="center"
            text="Name"
            textSize="20sp"
            textColor="#F4F4F4"/>

        <TextView
            id="@+id/text2"
            layout_width="match_parent"
            layout_height="50dp"
            layout_gravity="center"
            gravity="center"
            text="Surname Name"
            textSize="20sp"
            textColor="#BD4545"/>

        <ImageView
            id="@+id/image1"
            layout_gravity="center"
            layout_width="200dp"
            layout_height="200dp"
            src="@drawable/sample_image"/>
    </LinearLayout>

</FrameLayout>